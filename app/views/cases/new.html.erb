
<h1> Add a case</h1>


<div id="case">

<%= form_for(@case) do |f| %>
  <% if @case.errors.any? %>
    <h2> Errors </h2>
    <ul>
        <% @case.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>
 <p>
<label>Title: </label>
  <%= f.text_field :title, :class => "text" %></p>

  <label>Conflict: </label>
  <%= f.text_field :conflict, :class => "text"%></p>

  <%= f.submit %>
<% end %>
</div>
