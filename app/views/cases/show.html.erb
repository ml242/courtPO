<h1> Case</h1>

<div class="cases-main">
  <div id="case">
    <h1>Title: <%= @case.title %></h1>
    <li>Conflict: <%= @case.conflict %> </li>


    <div>
    <% @case.solutions.each do |solution| %>
      <li> Opinion: <%= solution.opinion %></li>
    <%end%>

     <!--  TODO edit the form to add an opinion to this page -->
      <input type="text" data-case-id="<%=@case.solutions.new %>" />
      <button> Submit </button>

    </div>

    <% if current_user  %>
    <% unless current_user.cases.where(id: params[:id]).empty? %>

  <%= link_to "Edit", edit_case_path(@case) %>
   <%= link_to "Delete", case_path(@case), :method => "delete", :confirm => "Are you sure you want to delete?" %>
  <% end %>

   <% end %>

   <p><%= link_to "Add New Case", new_case_path %></p>
  </div>
</div>


