<div class="cases-main">
  <div id="case">
    <h1>Title: <%= @case.title %></h1>
    <p>Conflict: <%= @case.conflict %></p>


    <a href="https://twitter.com/share?url=https%3A%2F%2Fcourtofpopularopinion.heroku.com&amp;via=courtofPOP&amp;text=Looking+for+a+solution:%3A<%= @case.title %>" class="twitter-share-button">Tweet</a>
  </div>
</div>

<div class="cases-main">
  <div id="case">
    <% if @case.solutions.empty? %>
    <h1>This Conflict Needs Your Opinion!</h1>
    <% end %>
    <% @case.solutions.each do |solution| %>

    <p> <%= solution.age.floor %>hrs ago - <%= solution.opinion %><br>
      - <%= solution.user.twitter %>
    </p>
    <%end%>
    <!--  TODO edit the form to add an opinion to this page -->
    <input id="opinion-input" type="text" placeholder="This conflict needs your opinion!" />
    <button id="case-button"> Submit </button>
  </div>
</div>


<% if current_user  %>
<% if @case.user == current_user %>
<%= link_to "Edit", edit_case_path(@case) %>
<%= link_to "Delete", case_path(@case), :method => "delete", :confirm => "Are you sure you want to delete?" %>
<% end %>
<% end %>
</div>
</div>


