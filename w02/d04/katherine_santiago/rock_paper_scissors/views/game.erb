<h1>Rock, Paper, Scissors</h1>

<form>
    <!-- <input type="text" name="choice"> -->
    <input type="submit" name="choice" value="paper">
        <input type="submit" name="choice" value="rock">
        <input type="submit" name="choice" value="scissors">
</form>

<p>Player 1 entered: <%= @choice %></p>
<p>Computer entered: <%= @comp %>
</p>

    <% if @choice == "paper" && @comp == "rock" %>
        <%= "Player 1 wins!" %><br>
        <%= @winner %>
    <% elsif @choice == "rock" && @comp == "scissors" %>
        <%= "Player 1 wins!" %><br>
        <%= @winner %>
    <% elsif @choice == "scissors" && @comp == "paper" %>
        <%= "Player 1 wins!" %><br>
        <%= @winner %>
    <% elsif @choice == @comp %>
        <%= "It's a tie; Try again!" %><br>
        <%= @tie %>
    <% else %>
        <%= "Computer wins!" %><br>
        <%= @loser %>
    <% end %>