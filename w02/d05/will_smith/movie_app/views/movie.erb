<div class="row">
    <div class="container">
        <div class="col-lg-12">
            <div class="page-header">
                <h1><%= @results['Title'] %></h1>
            </div>
                <% if @results['Poster'] != 'N/A' %>

                <a href="http://www.google.com/search?q=<%= @title_search %>" target="new">
                <img src="<%= @results['Poster'] %>">
                </a>
                <% else %>
                <a href="http://www.google.com/search?q=<%= @title_search %>" target="new">
                <h2>Search For Artwork</h2>
                </a>
                <% end %>

                <table class="table table-striped table-bordered table-hover">
                <tr> <% @results.each do |key, value| %>
                <td><%= key %></td>
                <td><%= value %></td>
                </tr>
                <% end %>
                </table>
              </div>
            </div>
          </div>



