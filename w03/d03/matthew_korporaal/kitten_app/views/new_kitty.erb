<% require 'faker' %>
<a href="/">Home</a>
<h1>New Kitten Form</h1>

<form action="/kittens" class="kitty-info" method="post">
  <a><input type="text" class="kitty-info" value="<%= Faker::Name.name %>" name="kitty-name">name</a><br>
  <a><input type="text" class="kitty-info" value="<%= rand(1..30) %>" name="kitty-age">age</a><br>
  <a><input type="text" class="kitty-info" value="<%= [true, false].sample %>" name="kitty-cute">cute?</a><br>
  <a><input type="text" class="kitty-info" value="http://placekitten.com/200/200" name="kitty-url">URL</a><br>
  <a><select name="owner">
  <% @owner_id.size.times do |ind| %>
    <option value="<%= @owner_id[ind] %>"><%= @owner_name[ind] %></option>
  <% end %>
  </select>Owner</a><br>
  <input type="submit" class="guest-info" value="Create Kitty!">
</form>