<h2>Programmers</h2>

<table border="1">
<tr>
  <th>Name</th>
  <th>Twitter Username</th>
  <th>Twitter Pic</th>
  <th>Github Name</th>
</tr>
<tr>  <% @results.each do |result| %>
  <td>
    <a href="/programmers/<%= result['id'] %>"><%= result.name %></a>
  </td>
   <td>
    <a href="http://www.twitter.com/<%= result.twitter_username %>"><%= result.twitter_username %></a>
  </td>
   <td>
    <img src="<%= result.twitter_pic %>">
  </td>
  <td>
    <a href="http://www.github.com/<%= result.github_username %>"><%= result.github_username %></a>
  </td>
  <td>
    <form action="/programmers/<%= result['id'] %>/edit" method="get">
      <input type="submit" value="Edit">
    </form>
  </td>
  <td>
    <form action="/programmers/<%= result['id'] %>/delete" method="post">
        <input type="submit" value="Delete">
    </form>
  </td>
</tr>

  <% end %>
</table>
