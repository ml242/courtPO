    <!--Content-->
    <section id="content1">
      <div class="container">
        <div class="row">
          <div class="span12">
            <h3><%= @programmer.name %></h3>
          </div>
        </div>

        <div class="row margin-40">
          <div class="span8">
            <h4>Tweet @<%= @programmer.twitter_username %></h4>
            <h4>Checkout on Github @<%= @programmer.github_username %></h4>
          </div>

          <div class="span4">
            <img style="height: 256px; width: 256px" src="<%= @programmer.twitter_pic %>" alt="<%= @name %> picture">
          </div>

        </div>

        <div class="row">
          <div class="span12">
            <div class="flexslider">
              <ul class="slides">
                <li><img src="img/header1.jpg" alt="Title" /></li>
                <li><img src="img/header2.jpg" alt="Title" /></li>
              </ul>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="span12 text-center">
            <div class="span3">
              <h5><a class="more" href="/programmers"><i class="icon-chevron-sign-left"></i> Back To Programmers</a></h5>
            </div>
            <div class="span3">
              <h5><a class="more" href="/programmers/<%= @programmer.id %>/edit"><i class="icon-chevron-sign-left"></i>edit info</a></h5>
            </div>
          </div>
        </div>

      </div>
    </section>
