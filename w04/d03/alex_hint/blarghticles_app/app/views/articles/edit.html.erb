<h1>Edit</h1>
<br>
<%= link_to('Home', '/articles') %>
<br>
<%= form_for(@article) do |f| %>
  <%= f.label :title %>
  <%= f.text_field 'title' %>
  <br>
  <br>
  <%= f.label :body %>
  <%= f.text_area 'body' %>
  <br>
  <br>
  <%= f.submit %>
<% end %>

<%= form_tag "/articles/#{@article.id}", method: :delete do %>
  <%= submit_tag 'Delete Article' %>
<% end %>