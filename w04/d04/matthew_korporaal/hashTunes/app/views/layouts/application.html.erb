<!DOCTYPE html>
<html>
<head>

  <title>HashMix</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <p>
    <% if current_user %>
      <%= link_to "Logout", "/logout" %>
    <% else %>
      <%= link_to "Signup", "/users/new" %>
      <%= link_to "Login", "/login" %>
    <% end %>

  </p>

</header>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%= yield %>

<%= session.to_s %>

</body>
</html>
