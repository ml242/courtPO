<div id="user_nav">
  <%= link_to "Home", "/main" %>
  <% if current_user %>
  <%= link_to "view my list", user_path(current_user) %>
    Logged in as <%= current_user.username %>.
  <%= link_to "Log out", log_out_path %>
  <% else %>
    <%= link_to "Sign up", sign_up_path %> or
    <%= link_to "log in", log_in_path %>
  <% end %>
</div>
